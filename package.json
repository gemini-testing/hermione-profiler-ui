{
  "name": "hermione-profiler-ui",
  "version": "0.0.5",
  "description": "UI to discover profiled information of hermione",
  "bin": "./build-tools/cli.js",
  "main": "./build-tools/api.js",
  "author": "Tikvach Alexander <unlok@yandex-team.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gemini-testing/hermione-profiler-ui/issues"
  },
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gemini-testing/hermione-profiler-ui.git"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "run-s build:*",
    "test": "run-s test:*",
    "lint": "run-s lint:*",
    "fix": "run-s fix:*",
    "build:app": "react-scripts build",
    "build:tools": "tsc -p src/tools/tsconfig.json && chmod +x ./build-tools/cli.js",
    "test:unit": "react-scripts test --runInBand=true --watchAll=false",
    "lint:eslint": "eslint --config .eslintrc.json src/**/*.{ts,tsx}",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "clean": "rimraf build build-tools",
    "commit": "cz",
    "release": "standard-version",
    "prepublish": "npm run lint && npm run test && npm run clean && npm run build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@ant-design/charts": "^1.2.7",
    "@hookstate/core": "^3.0.8",
    "@hookstate/untracked": "^3.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/bluebird": "^3.5.36",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.172",
    "@types/node": "^12.20.23",
    "@types/oboe": "^2.1.1",
    "@types/react": "^17.0.17",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "antd": "^4.16.11",
    "axios": "^0.21.1",
    "bluebird": "^3.7.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dayjs": "^1.10.6",
    "eslint": "^7.8.0",
    "eslint-config-gemini-testing": "^3.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-typescript": "^0.14.0",
    "jest-extended": "^0.11.5",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "oboe": "^2.1.5",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "rimraf": "^3.0.2",
    "sass": "^1.37.5",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "yargs": "^17.1.1",
    "fs-extra": "^10.0.0"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "keywords": [
    "hermione",
    "hermione-profiler",
    "hermione-profiler-ui"
  ],
  "files": [
    "build/index.html",
    "build/static",
    "build-tools",
    "!build-tools/*.spec.js",
    "!build-tools/*.spec.d.ts"
  ]
}
